<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- MSSV -->
        <EditText
            android:id="@+id/editTextMSSV"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="MSSV"
            android:inputType="text" />

        <!-- Họ tên -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="Họ tên"
            android:inputType="text" />

        <!-- Giới tính -->
        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Nam" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Nữ" />
        </RadioGroup>

        <!-- Email -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="Số điện thoại"
            android:inputType="phone" />

        <!-- Ngày sinh -->
        <Button
            android:id="@+id/buttonSelectBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Chọn ngày tháng năm sinh" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
        <Spinner
            android:id="@+id/spinnerWard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:prompt="Chọn Phường/Xã" />

        <Spinner
            android:id="@+id/spinnerDistrict"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:prompt="Chọn Quận/Huyện" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:prompt="Chọn Tỉnh/Thành" />
            </LinearLayout>

        <!-- Sở thích -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <CheckBox
            android:id="@+id/checkBoxSports"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Thể thao" />

        <CheckBox
            android:id="@+id/checkBoxMovies"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Điện ảnh" />

        <CheckBox
            android:id="@+id/checkBoxMusic"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Âm nhạc" />
        </LinearLayout>

        <!-- Điều khoản -->
        <CheckBox
            android:id="@+id/checkBoxAgree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Đồng ý với các điều khoản" />

        <!-- Nút Submit -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>
